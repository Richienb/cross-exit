{
    "name": "cross-exit",
    "version": "1.0.0",
    "description": "Gracefully terminate a script in Node.js or browsers.",
    "repository": "https://github.com/Richienb/cross-exit.git",
    "author": "Richie Bendall <richiebendall@gmail.com>",
    "license": "MIT",
    "main": "index.js",
    "browser": "browser.js",
    "files": [
        "index.js",
        "index.d.ts",
        "browser.js"
    ],
    "engines": {
        "node": ">=4"
    },
    "scripts": {
        "lint": "xo",
        "test": "yarn lint && ava"
    },
    "keywords": [
        "exit",
        "process",
        "browser",
        "error",
        "terminate",
        "graceful",
        "silent",
        "break",
        "scope",
        "catch",
        "window",
        "document",
        "node",
        "replacement",
        "ponyfill"
    ],
    "dependencies": {},
    "devDependencies": {
        "ava": "^2.4.0",
        "eslint-config-richienb": "^0.4.2",
        "xo": "^0.25.3"
    },
    "resolutions": {
        "eslint": "^6.8.0"
    },
    "xo": {
        "extends": "richienb",
        "rules": {
            "no-process-exit": 0,
            "unicorn/no-process-exit": 0,
            "unicorn/prefer-add-event-listener": 0
        }
    }
}
